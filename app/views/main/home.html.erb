<div class="container">
<% if @result %>
  <% if @result == "male" %>
    <div id="result" class="alert alert-success">
      The author of this text is male.
    </div>
  <% elsif @result == "female" %>
    <div id="result" class="alert alert-success">
      The author of this text is female.
    </div>
  <% else %>  
    <div id="error" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      Something went wrong! :(
    </div>
  <% end %>
<% end %>

<%= form_tag "/apply_model", method: :post, class: 'form-horizontal', role: "form" do %>
  <div class="form-group">
  <%= text_area_tag(:text, @text, rows: 5, class: "form-control", id: "focusedInput", placeholder: "Insert here your text...") %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Guess!</button>
  </div>
<% end %>

